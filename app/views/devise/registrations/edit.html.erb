<div class="container col-sm-6 user-container">
  <h2>Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group profile-upload text-center">
      <div class="user-profile-picture">
        <span class="container" style="display: inline;"> <%= image_tag place_user_profile_picture(resource), id: "upload_profile_pic" %> </span>
        <span class="fa fa-trash" id="remove_profile_picture"></span>
        <label for="user_profile_picture"> <span class="fa fa-pencil" id="change_profile_pic"> </label>
      </div>
      <%= f.file_field :profile_picture, accept: "image/png, image/jpg, image/jpeg" %>
    </div>

    <div class="form-group">
      <%= f.label :first_name, "Name:", class: "control-label" %>
      <div class="names-container">
        <div class="col-sm-6 names">
          <%= f.text_field :first_name, placeholder: "First Name..", class: "form-control", required: true, style: "display: inline; margin-right: 0.15rem; width: calc(100% - 0.15rem);" %>
          <span class="feedback-icon"></span>
          <div class="feedback-warning"></div>
        </div>
        <div class="col-sm-6 names">
          <%= f.text_field :last_name , placeholder: "Last Name..", class: "form-control", required: true, style: "display: inline; margin-left: 0.15rem; width: calc(100% - 0.15rem);" %>
          <span class="feedback-icon"></span>
          <div class="feedback-warning"></div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email:" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "example@mail.com", style: "display: inline;" %>
      <span class="feedback-icon"></span>
      <div class="feedback-warning"></div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <!-- Password Fields plus collapse drop downs-->
    <button class="dropdown-toggle btn btn-warning" data-toggle="collapse" data-target="#password_fields"> Change Password</button>

    <div class="collapse" id="password_fields">
      <em style="color: blue;"> Leave it blank if you don't want to change the password </em>
      <div class="form-group">
        <%= f.label :password, "New password:" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New password", style: "display: inline;" %>
        <span class="feedback-icon"></span>
        <div class="feedback-warning"></div>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password:" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control", style: "display: inline;" %>
        <span class="feedback-icon"></span>
        <div class="feedback-warning"></div>
      </div>
    </div>
    <!-- _________________________________________________________________________ -->

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary form-control" %>
    </div>
  <% end %>

  <h3>Delete My Account</h3>

  <p>Unhappy? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>


  <%= link_to "Back", :back %>
</div>