<div class="container col-sm-5" id="forget_password_container">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, "Email:" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "example@mail.com", class: "form-control", required: true, style: "display: inline;"%>
      <span class="feedback-icon"></span>
      <div class="feedback-warning"></div>
    </div>

    <div>
      <%= f.submit "Reset password", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>