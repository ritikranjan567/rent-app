<div class="container col-sm-5">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "New password:" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "New password", required: true, style: "display: inline;" %>
      <span class="feedback-icon"></span>
      <div class="feedback-warning"></div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password:" %><br />
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm New Password", required: true, style: "display: inline;" %>
      <span class="feedback-icon"></span>
      <div class="feedback-warning"></div>
    </div>

    <div>
      <%= f.submit "Change my password", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>