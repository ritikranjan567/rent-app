<div class="container col-sm-7 advertisement-container">
  <div class="text-center"> <h2>POST YOUR AD</h2> <hr></div>
  <%= form_for(@asset) do |f| %>
    <% if @asset.errors.any? %>
      <div class="alert alert-danger">
        <%= "Server found #{@asset.errors.count} validation errors" %>
      </div>
    <% end %>

    <div class="container col-sm-11" id="asset_details">
      <h3>Enter few features and details: </h3>
      <div class="form-group">
        <%= f.label :name, "*Name Your Place:" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Give a name to your place. E.g (Peterson's Garage, Game Space)" %>
      </div>
      <div class="form-group">
        <%= f.label :dimension, "*Dimensions of the Place:" %>
        <%= f.text_field :dimension, class: "form-control", placeholder: "Dimensions E.g (22m X 32m, length: 50ft and breadth: 60ft)" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "*Brief the Features:" %>
        <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Brief condition, features, locality.." %>
      </div>
      <hr>
    </div>

    <div class="container col-sm-11" id="asset_price">
      <h3>Set the pricing: </h3>
      <div class="form-group">
        <%= f.label :price, "*Price:" %>
        <div class="form-inline">
          <%= f.text_field :price, class: "form-control col-sm-8" %>
          <%= f.select(:payment_period, ["Per Day", "Per Week", "Per Month", "Per Annum"], {}, class: "form-control col-sm-4") %>
        </div>
      </div>
    </div>
  <% end %>
</div>